@page "/Productos/Edit/{ProductoId:int}"
@using GestionEntradaInventario.Models
@using GestionEntradaInventario.Services
@using Microsoft.AspNetCore.Authorization
@inject EntradasServices entradasService
@inject NavigationManager nav
@attribute [Authorize]
@rendermode InteractiveServer

<div class="container mt-3">
    <EditForm Model="producto" OnValidSubmit="Guardar">
        <DataAnnotationsValidator />
        <div class="card shadow-sm bg-white">
            <div class="card-header bg-white text-center border-bottom-0">
                <h4 class="mb-0">Editar Producto</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label><strong>ID</strong></label>
                    <input class="form-control bg-light" value="@producto.ProductoId" readonly />
                </div>
                <div class="mb-3">
                    <label><strong>Descripción</strong></label>
                    <InputText class="form-control" @bind-Value="producto.Descripcion" />
                    <ValidationMessage For="@(() => producto.Descripcion)" />
                </div>
                <div class="mb-3">
                    <label><strong>Costo</strong></label>
                    <InputNumber class="form-control" @bind-Value="producto.Costo" />
                    <ValidationMessage For="@(() => producto.Costo)" />
                </div>
                <div class="mb-3">
                    <label><strong>Precio</strong></label>
                    <InputNumber class="form-control" @bind-Value="producto.Precio" />
                    <ValidationMessage For="@(() => producto.Precio)" />
                </div>
                <div class="mb-3">
                    <label><strong>Existencia</strong></label>
                    <input type="number" class="form-control bg-light" value="@producto.Existencia" readonly />
                </div>
            </div>
            <div class="card-footer bg-white border-top-0 text-center">
                <a href="/Productos/Index" class="btn btn-secondary me-1"><i class="bi bi-arrow-left"></i> Volver</a>
                <button type="submit" class="btn btn-primary me-1"><i class="bi bi-floppy"></i> Guardar</button>
                <button type="button" class="btn btn-danger" @onclick="Eliminar"><i class="bi bi-trash"></i> Eliminar</button>
            </div>
        </div>
    </EditForm>
</div>

@code {
    [Parameter] public int ProductoId { get; set; }
    private Productos producto = new();

    protected override async Task OnInitializedAsync()
    {
        var lista = await entradasService.ListarProductos();
        producto = lista.FirstOrDefault(p => p.ProductoId == ProductoId) ?? new();
    }

    private async Task Guardar()
    {
        if (await entradasService.GuardarProducto(producto))
        {
            nav.NavigateTo("/Productos/Index");
        }
    }

    private async Task Eliminar()
    {
        if (await entradasService.EliminarProducto(producto.ProductoId))
        {
            nav.NavigateTo("/Productos/Index");
        }
    }
}